# Kaizen Studio Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=kaizen_user
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=kaizen_studio_dev
POSTGRES_PORT=5432

# Database URL for backend (uses Docker service hostname)
DATABASE_URL=postgresql://kaizen_user:change_this_to_a_secure_password@postgres:5432/kaizen_studio_dev

# =============================================================================
# CACHE (Redis)
# =============================================================================
REDIS_PASSWORD=change_this_to_a_secure_redis_password
REDIS_PORT=6379

# Redis URL for backend (uses Docker service hostname)
REDIS_URL=redis://:change_this_to_a_secure_redis_password@redis:6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=change_this_to_a_secure_random_key_minimum_32_characters

# Algorithm: HS256 for development, RS256 for production
JWT_ALGORITHM=HS256

# Token expiration
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# RSA Keys for RS256 (production only)
# JWT_PRIVATE_KEY=
# JWT_PUBLIC_KEY=

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# BACKEND
# =============================================================================
BACKEND_PORT=8000

# =============================================================================
# OPTIONAL: Development Helpers
# =============================================================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=debug
