# ==============================================
# Kaizen Studio Frontend - Environment Variables
# ==============================================
# Copy this file to .env.local for local development
# Copy to .env.production for production builds

# ==============================================
# API Configuration
# ==============================================

# Backend API base URL
VITE_API_URL=http://localhost:8000

# API version prefix (appended to API_URL)
VITE_API_VERSION=v1

# ==============================================
# Authentication
# ==============================================

# SSO Provider configurations
# Azure AD
VITE_AZURE_CLIENT_ID=
VITE_AZURE_TENANT_ID=

# Google OAuth
VITE_GOOGLE_CLIENT_ID=

# Okta
VITE_OKTA_CLIENT_ID=
VITE_OKTA_ISSUER=

# JWT token refresh threshold (seconds before expiry)
VITE_TOKEN_REFRESH_THRESHOLD=300

# ==============================================
# Feature Flags
# ==============================================

# Enable debug mode (shows additional logging)
VITE_DEBUG=false

# Enable mock API responses (for development)
VITE_ENABLE_MOCKS=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# ==============================================
# WebSocket Configuration
# ==============================================

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:8000

# WebSocket reconnection settings
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# ==============================================
# Analytics & Monitoring
# ==============================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ==============================================
# Build Configuration
# ==============================================

# Source maps in production (set to false for security)
VITE_GENERATE_SOURCEMAP=false
