# ==============================================
# Kaizen Studio Frontend - Production Configuration
# ==============================================
# This file contains production-safe defaults
# Sensitive values should be set via environment variables at runtime

# API Configuration
# Use empty string for production - nginx will proxy /api/* to backend
VITE_API_URL=
VITE_API_VERSION=v1

# Feature Flags
VITE_DEBUG=false
VITE_ENABLE_MOCKS=false
VITE_ENABLE_EXPERIMENTAL=false

# WebSocket Configuration
VITE_WS_URL=wss://api.kaizen-studio.com
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Performance
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Build
VITE_GENERATE_SOURCEMAP=false
